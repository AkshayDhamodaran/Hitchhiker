<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OTpTeSt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_friends</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/transparent</item>
    </style>

    <style name="RoundButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/blue_friends</item>
    </style>

    <style name="Theme.OTpTeSt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OTpTeSt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OTpTeSt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/blue_friends</item>
        <item name="android:textColor">@color/green_vehicle</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="windowMinWidthMajor">90%</item>
        <item name="windowMinWidthMinor">90%</item>
    </style>

    <style name="button" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="color">@color/blue_friends</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">8dp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15dp</item>
        <item name="backgroundTint">@color/blue_friends</item>
    </style>
</resources>